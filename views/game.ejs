<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Games</title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
    <link rel="stylesheet" href="game.css" />
  </head>
  <body>
    <!-- Header -->
    <header>
      <nav class="" style="height: 90px">
        <a href="/"><div class="back-icon">&lt;</div></a>
        <div class="game-logo"></div>
        <div class="game-title">ROCK PAPER SCISSORS</div>
      </nav>
    </header>
    <!--End of Main Header-->
    <section class="games">
      <div class="container" style="margin-top: 5rem">
        <div class="row">
          <div class="col col-lg-2 games-box"></div>
          <div class="col col-lg-2 games-box">
            <div class="player-text">Palyer 1</div>
          </div>
          <div class="col col-lg-4 games-box"></div>
          <div class="col col-lg-2 games-box">
            <div class="player-text">Com</div>
          </div>
          <div class="col col-lg-2 games-box"></div>
        </div>
        <div class="row">
          <div class="col col-lg-2 games-box"></div>
          <div class="col col-lg-2 games-box">
            <img src="assets/batu.png" alt="" id="player-batu" />
          </div>
          <div class="col col-lg-4 games-box"></div>
          <div class="col col-lg-2 games-box">
            <img src="assets/batu.png" alt="" id="com-batu" />
          </div>
          <div class="col col-lg-2 games-box"></div>
        </div>
        <div class="row">
          <div class="col col-lg-2 games-box"></div>
          <div class="col col-lg-2 games-box">
            <img src="assets/kertas.png" alt="" id="player-kertas" />
          </div>
          <div class="col col-lg-4 games-box">
            <div class="versus-text" id="versus-text">VS</div>
            <div class="result-box" id="result-box" style="display: none">
              <p class="result-text" id="result-text"></p>
            </div>
          </div>
          <div class="col col-lg-2 games-box">
            <img src="assets/kertas.png" alt="" id="com-kertas" />
          </div>
          <div class="col col-lg-2 games-box"></div>
        </div>
        <div class="row">
          <div class="col col-lg-2 games-box"></div>
          <div class="col col-lg-2 games-box">
            <img src="assets/gunting.png" alt="" id="player-gunting" />
          </div>
          <div class="col col-lg-4 games-box"></div>
          <div class="col col-lg-2 games-box">
            <img src="assets/gunting.png" alt="" id="com-gunting" />
          </div>
          <div class="col col-lg-2 games-box"></div>
        </div>
        <div class="row">
          <div class="col col-lg-2 games-box"></div>
          <div class="col col-lg-2 games-box"></div>
          <div class="col col-lg-4 games-box">
            <img src="assets/refresh.png" alt="" id="refresh-button" />
          </div>
          <div class="col col-lg-2 games-box"></div>
          <div class="col col-lg-2 games-box"></div>
        </div>
      </div>
    </section>
    <script src="game.js"></script>
  </body>
</html>
